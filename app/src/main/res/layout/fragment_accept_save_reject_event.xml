<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AcceptSaveRejectEventFragment"
    android:orientation="vertical">


    <Button
        android:id="@+id/event_button_accept"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="234dp"
        android:text="Termin annehmen" />

    <Button
        android:id="@+id/event_button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/event_button_accept"
        android:layout_marginBottom="223dp"
        android:text="Termin ohne Zusage speichern" />

    <Button
        android:id="@+id/event_button_reject"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/event_button_accept"
        android:layout_marginBottom="161dp"
        android:text="Termin ablehnen" />

    <TextView
        android:id="@+id/event_textView_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="39dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/event_textView_description"
        android:layout_width="313dp"
        android:layout_height="116dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:text="TextView"
        android:background="@drawable/border_style"/>
</RelativeLayout>