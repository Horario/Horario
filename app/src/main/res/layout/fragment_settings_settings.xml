<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_relativeLayout_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/settings_settings_textView_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/settings_settings_textView_settings"
        android:layout_marginTop="190dp"
        android:text="@string/username_text" />

    <TextView
        android:id="@+id/settings_settings_textView_allowPush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/settings_settings_textView_username"
        android:layout_marginBottom="229dp"
        android:text="@string/allowpush_text" />

    <TextView
        android:id="@+id/settings_settings_textView_settings"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="88dp"
        android:text="@string/settings_text"
        android:textColor="#95ab63"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/settings_settings_textView_minutesBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settings_settings_textView_reminder"
        android:layout_toEndOf="@+id/settings_settings_textView_allowPush"
        android:text="@string/minutesBefore_text" />

    <EditText
        android:id="@+id/settings_settings_editText_username"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/settings_settings_textView_username"
        android:layout_marginEnd="42dp"
        android:layout_marginTop="-19dp"
        android:ems="10"
        android:focusable="false"
        android:hint="@string/username_hint"
        android:imeOptions="flagNoExtractUi"
        android:inputType="textPersonName" />

    <Switch
        android:id="@+id/settings_settings_Switch_allowPush"
        android:layout_width="59dp"
        android:layout_height="39dp"
        android:layout_alignBaseline="@+id/settings_settings_textView_allowPush"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:switchTextAppearance="@style/TextAppearance.AppCompat"
        android:textColorLink="#96ab63"
        android:thumbTint="#95ab63"
        android:trackTint="@android:color/darker_gray"
        tools:checked="true" />

    <Spinner
        android:id="@+id/settings_settings_spinner_minutes"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settings_settings_textView_reminder"
        android:layout_toEndOf="@+id/settings_settings_textView_username"
        android:entries="@array/push_times"
        android:prompt="@string/calendar"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/settings_settings_textView_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/settings_settings_textView_username"
        android:layout_marginBottom="194dp"
        android:text="@string/reminder_text" />

</RelativeLayout>
