<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings_relativeLayout_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/settings_settings_textView_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/settings_settings_textView_settings"
        android:layout_marginTop="99dp"
        android:text="@string/username_text" />

    <TextView
        android:id="@+id/settings_settings_textView_allowPush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/settings_settings_textView_settings"
        android:layout_marginTop="169dp"
        android:text="@string/allowpush_text" />

    <TextView
        android:id="@+id/settings_settings_textView_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="@string/settings_text"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/settings_settings_textView_minutesBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settings_settings_textView_reminder"
        android:layout_toEndOf="@+id/settings_settings_textView_allowPush"
        android:text="@string/minutesBefore_text" />

    <EditText
        android:id="@+id/settings_settings_editText_username"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/settings_settings_textView_username"
        android:layout_marginEnd="42dp"
        android:layout_marginTop="-19dp"
        android:ems="10"
        android:focusable="false"
        android:hint="@string/username_hint"
        android:imeOptions="flagNoExtractUi"
        android:inputType="textPersonName" />

    <Switch
        android:id="@+id/settings_settings_Switch_allowPush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/settings_settings_textView_allowPush"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="62dp" />

    <Spinner
        android:id="@+id/settings_settings_spinner_minutes"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/settings_settings_textView_reminder"
        android:layout_toEndOf="@+id/settings_settings_textView_username" />

    <TextView
        android:id="@+id/settings_settings_textView_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/settings_settings_textView_settings"
        android:layout_marginTop="234dp"
        android:text="@string/reminder_text" />

</RelativeLayout>
