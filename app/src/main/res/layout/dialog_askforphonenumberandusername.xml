<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    tools:context=".TabActivity">

    <EditText
        android:id="@+id/dialog_afterScanner_editText_username"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="26dp"
        android:hint="@string/username_hint"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/dialog_afterScanner_editText_phoneNumber"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dialog_afterScanner_editText_username"
        android:layout_marginLeft="30dp"
        android:hint="@string/phoneNumber_hint"
        android:inputType="phone" />

</RelativeLayout>