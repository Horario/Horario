<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.QRSharingActivity">

    <RelativeLayout
        android:id="@+id/qrSharing_relativeLayout_calendarActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/qrSharing_relativeLayout_textViewFrame"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <TextView
            android:id="@+id/qrSharing_textView_headline"
            android:layout_width="361dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/qrSharing_textView_description"
            android:layout_width="372dp"
            android:layout_height="161dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="58dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/qrSharing_relativeLayout_buttonFrame"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="420dp">

        <Button
            android:id="@+id/qrSharing_button_shareWith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/share_with"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/qrSharing_button_showInCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="37dp"
            android:text="@string/in_kalender_anzeigen"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="83dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/qrSharing_imageView_qrCode"
        android:layout_width="218dp"
        android:layout_height="200dp"
        android:layout_above="@+id/qrSharing_relativeLayout_buttonFrame"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="220dp" />

</RelativeLayout>