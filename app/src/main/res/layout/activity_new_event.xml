<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:id="@+id/newEvent_newFragment"
        android:visibility="visible"></RelativeLayout>
    <RelativeLayout android:id="@+id/newEvent_oldFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/newEventTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"

        android:layout_alignParentTop="true"
        android:layout_marginEnd="122dp"
        android:text="@string/newEvent"
        android:textSize="25sp" />


    <EditText

        android:id="@+id/newEvent_editText_description"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/newEvent_textView_Description"

        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="textPersonName" />


    <TextView

        android:id="@+id/newEvent_textView_Description"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"

        android:layout_marginStart="13dp"
        android:layout_marginTop="98dp"
        android:text="@string/event_Description" />


    <TextView

        android:id="@+id/newEvent_textView_Date"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginTop="137dp"
        android:text="@string/event_date" />


    <EditText

        android:id="@+id/newEvent_editText_Date"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"

        android:layout_below="@+id/newEvent_editText_description"

        android:ems="10"

        />


    <TextView

        android:id="@+id/newEvent_textView_startTime"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/newEvent_editText_Date"
        android:text="@string/event_startTime" />


    <EditText

        android:id="@+id/newEvent_editText_startTime"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/newEvent_textView_startTime"

        android:layout_alignParentEnd="true"
        android:ems="10"
        android:focusable="true" />


    <TextView

        android:id="@+id/newEvent_textView_endTime"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="218dp"
        android:text="@string/event_endtime" />


    <EditText

        android:id="@+id/newEvent_textEdit_endTime"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/newEvent_editText_startTime"
        android:focusable="true"
        android:ems="10" />


    <CheckBox

        android:id="@+id/newEvent_checkBox_SerialEvent"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="207dp"
        android:checked="false"
        android:text="@string/event_serialEvent" />


    <Spinner

        android:id="@+id/newEvent_spinner_repetition"

        android:layout_width="204dp"

        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="174dp"
        android:layout_marginStart="180dp"
        android:entries="@string/event_repetition" />


    <TextView

        android:id="@+id/newEvent_textView_repetition"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/newEvent_spinner_repetition"

        android:layout_toStartOf="@+id/newEvent_editText_description"
        android:text="@string/event_repetition"
        android:visibility="gone" />


    <TextView

        android:id="@+id/newEvent_textView_endOfRepetiton"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/newEvent_textEdit_endOfRepetition"
        android:layout_toEndOf="@+id/newEvent_textView_shortTitle"
        android:text="@string/event_endOfRepetition"
        android:visibility="gone" />


    <EditText

        android:id="@+id/newEvent_textEdit_endOfRepetition"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="113dp"
        android:ems="10"
        android:focusable="true"
        android:visibility="gone" />


    <Button

        android:id="@+id/newEvent_button_save"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="47dp"
        android:text="@string/event_save" />


    <TextView

        android:id="@+id/newEvent_textView_room"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/event_room" />


    <EditText

        android:id="@+id/newEvent_textEdit_room"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="text" />

    <EditText
        android:id="@+id/newEvent_textEdit_shortTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/newEventTab"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/newEvent_textView_shortTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/event_shortTitle" />


</RelativeLayout>
</RelativeLayout>