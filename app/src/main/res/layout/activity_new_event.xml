<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/newEventTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/newEvent"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/newEvent_editText_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/newEvent_textView_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="111dp"
        android:text="@string/event_Description" />

    <TextView
        android:id="@+id/newEvent_textView_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/newEvent_textView_Description"
        android:layout_marginTop="157dp"
        android:text="@string/event_date" />

    <EditText
        android:id="@+id/newEvent_editText_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/newEvent_editText_description"
        android:layout_below="@+id/newEvent_editText_description"
        android:ems="10"
        android:focusable="false"
        android:inputType="date" />

    <TextView
        android:id="@+id/newEvent_textView_startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/newEvent_textView_Date"
        android:layout_marginTop="209dp"
        android:text="@string/event_startTime" />

    <EditText
        android:id="@+id/newEvent_editText_startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/newEvent_editText_description"
        android:layout_marginTop="199dp"
        android:ems="10"
        android:focusable="false" />

    <TextView
        android:id="@+id/newEvent_textView_endTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/newEvent_textView_startTime"
        android:layout_centerVertical="true"
        android:text="@string/event_endtime" />

    <EditText
        android:id="@+id/newEvent_textEdit_endTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/newEvent_editText_description"
        android:layout_centerVertical="true"
        android:ems="10"
        android:focusable="false" />

    <CheckBox
        android:id="@+id/newEvent_checkBox_SerialEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="208dp"
        android:layout_toStartOf="@+id/newEventTab"
        android:checked="false"
        android:text="@string/event_serialEvent" />

    <Spinner
        android:id="@+id/newEvent_spinner_repetition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/newEvent_checkBox_SerialEvent"
        android:layout_marginTop="-208dp"
        android:entries="@string/event_repetition"
        android:visibility="gone" />

    <TextView
        android:id="@+id/newEvent_textView_repetition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/newEvent_spinner_repetition"
        android:layout_alignStart="@+id/newEvent_textView_Date"
        android:text="@string/event_repetition"
        android:visibility="gone" />

    <TextView
        android:id="@+id/newEvent_textView_endOfRepetiton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/newEvent_textView_Date"
        android:layout_marginBottom="154dp"
        android:text="@string/event_endOfRepetition"
        android:visibility="gone" />

    <EditText
        android:id="@+id/newEvent_textEdit_endOfRepetition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/newEvent_editText_description"
        android:layout_below="@+id/newEvent_spinner_repetition"
        android:ems="10"
        android:focusable="false" />

    <Button
        android:id="@+id/newEvent_button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/newEvent_editText_description"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:text="@string/event_save" />

    <TextView
        android:id="@+id/newEvent_textView_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/newEvent_textView_startTime"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="86dp"
        android:text="@string/event_room" />

    <EditText
        android:id="@+id/newEvent_textEdit_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/newEvent_textView_room"
        android:layout_alignStart="@+id/newEvent_editText_description"
        android:ems="10"
        android:inputType="text" />

</RelativeLayout>