<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/generator_realtivLayout_show_qrSharingFragment">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/generator_texView_frame"
        android:layout_width="match_parent"
        android:layout_height="347dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/generator_textView_Headline"
            android:layout_width="244dp"
            android:layout_height="46dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="23dp"
            android:text="@string/headline" />

        <TextView
            android:id="@+id/generator_textView_description"
            android:layout_width="309dp"
            android:layout_height="111dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="78dp"
            android:scrollbars="vertical"
            android:text="EventText" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/generator_button_frame"
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <Button
            android:id="@+id/generator_button_start_qrShareingFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="22dp"
            android:text="@string/qr_code_anzeigen" />

        <Button
            android:id="@+id/generator_button_show_eventFeedbackFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="71dp"
            android:text="@string/r_ckmeldungen_anzeigen" />

    </RelativeLayout>
</RelativeLayout>

