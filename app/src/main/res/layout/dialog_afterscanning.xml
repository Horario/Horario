<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_qrScanner_relativeLayout_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".TabActivity">


    <RelativeLayout
        android:id="@+id/dialog_qrScanner_relativeLayout_TextFrame"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp">

        <TextView
            android:id="@+id/dialog_qrScanner_textView_headline"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/dialog_qrScanner_textView_description"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_qrScanner_relativLayout_buttonFrame"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp">

        <Button
            android:id="@+id/dialog_qrScanner_button_eventRecject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="191dp"
            android:layout_marginEnd="95dp"
            android:text="@string/termin_ablehnen"
            android:visibility="visible" />

        <Button
            android:id="@+id/dialog_qrScanner_button_eventSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/dialog_qrScanner_button_eventRecject"
            android:layout_marginTop="168dp"
            android:text="@string/termin_zusagen"
            android:visibility="visible" />

        <Button
            android:id="@+id/dialog_qrScanner_button_eventSaveOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Termin @string/termin_ohne_zusage_speichern" />

        <Button
            android:id="@+id/dialog_qrScanner_button_cancle"
            android:layout_width="308dp"
            android:layout_height="141dp"
            android:layout_above="@+id/dialog_qrScanner_button_eventSaveOnly"
            android:layout_marginBottom="-93dp"
            android:layout_marginEnd="-220dp"
            android:layout_toStartOf="@+id/dialog_qrScanner_button_eventRecject"
            android:text="ABBRUCH" />

        <Button
            android:id="@+id/dialog_qrScanner_button_toCalender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Zum Kalender" />
    </RelativeLayout>


</RelativeLayout>