<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/invitationlist_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/einladungen"
        android:textSize="25sp"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="6dp"/>

<android.support.v7.widget.RecyclerView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/invitationlist"
    android:name="hft.wiinf.de.horario.view.InvitationFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:layoutManager="LinearLayoutManager"
    tools:context=".view.InvitationFragment"
    tools:listitem="@android:layout/simple_list_item_1"
    android:layout_below="@+id/invitationlist_header"/>

</RelativeLayout>