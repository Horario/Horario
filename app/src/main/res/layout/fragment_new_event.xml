<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newEvent_oldFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:focusable="false"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/newEventTab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:text="@string/newEvent"
                android:textAlignment="center"
                android:textColor="@color/zentea_darkgreen"
                android:textSize="25sp" />


            <EditText

                android:id="@+id/newEvent_editText_description"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_below="@+id/newEvent_textEdit_shortTitle"
                android:ems="8"
                android:inputType="textPersonName" />


            <TextView

                android:id="@+id/newEvent_textView_Description"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignBaseline="@+id/newEvent_editText_description"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:text="@string/event_Description" />


            <TextView

                android:id="@+id/newEvent_textView_Date"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignBaseline="@+id/newEvent_editText_Date"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:text="@string/event_date" />


            <EditText

                android:id="@+id/newEvent_editText_Date"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_below="@+id/newEvent_textEdit_room"
                android:ems="8" />


            <TextView

                android:id="@+id/newEvent_textView_startTime"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignBaseline="@+id/newEvent_editText_startTime"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:text="@string/event_startTime" />


            <EditText

                android:id="@+id/newEvent_editText_startTime"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_below="@+id/newEvent_editText_Date"
                android:ems="8"
                android:focusable="true" />


            <TextView

                android:id="@+id/newEvent_textView_endTime"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignBaseline="@+id/newEvent_textEdit_endTime"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="189dp"
                android:text="@string/event_endtime" />


            <EditText

                android:id="@+id/newEvent_textEdit_endTime"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/newEvent_editText_startTime"
                android:ems="8"
                android:focusable="true" />


            <CheckBox

                android:id="@+id/newEvent_checkBox_SerialEvent"

                android:layout_width="wrap_content"

                android:layout_height="73dp"

                android:layout_alignParentStart="true"

                android:layout_below="@id/newEvent_textVire_userName"

                android:checked="false"
                android:text="@string/event_serialEvent" />


            <Spinner

                android:id="@+id/newEvent_spinner_repetition"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/newEvent_checkBox_SerialEvent"

                android:layout_alignParentEnd="true"


                android:entries="@string/event_repetition"
                android:visibility="gone" />


            <TextView

                android:id="@+id/newEvent_textView_endOfRepetiton"

                android:layout_width="wrap_content"

                android:layout_height="32dp"

                android:layout_alignParentStart="true"
                android:layout_below="@id/newEvent_checkBox_SerialEvent"

                android:paddingLeft="10dp"
                android:text="@string/event_endOfRepetition"
                android:visibility="gone" />


            <EditText

                android:id="@+id/newEvent_textEdit_endOfRepetition"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignBottom="@id/newEvent_textView_endOfRepetiton"
                android:layout_alignParentEnd="true"
                android:ems="8"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:visibility="gone" />


            <Button

                android:id="@+id/newEvent_button_save"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                android:layout_below="@id/newEvent_textView_endOfRepetiton"
                android:layout_centerHorizontal="true"

                android:backgroundTint="@color/zentea_darkgreen"
                android:text="@string/event_save"
                android:textColor="@color/ic_launcher_background" />


            <TextView

                android:id="@+id/newEvent_textView_room"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignBaseline="@+id/newEvent_textEdit_room"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:text="@string/event_room" />


            <EditText

                android:id="@+id/newEvent_textEdit_room"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_below="@+id/newEvent_editText_description"
                android:ems="8"
                android:imeOptions="actionDone"
                android:inputType="text" />

            <EditText
                android:id="@+id/newEvent_textEdit_shortTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_below="@+id/newEventTab"
                android:ems="8"
                android:inputType="text" />

            <TextView
                android:id="@+id/newEvent_textView_shortTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/newEvent_textEdit_shortTitle"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:text="@string/event_shortTitle" />

            <TextView
                android:id="@+id/newEvent_textVire_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/unewEvent_textEdit_userName"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:text="@string/username_text" />

            <EditText
                android:id="@+id/unewEvent_textEdit_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/newEvent_textEdit_endTime"
                android:ems="8"
                android:inputType="text" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>