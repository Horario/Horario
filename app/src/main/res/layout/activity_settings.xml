<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/settings_relativeLayout_main"
    android:visibility="visible"
    android:background="?android:windowBackground">

    <RelativeLayout
        android:id="@+id/settings_relativeLayout_helper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/settings_relativeLayout_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="visible">

        <Button
            android:id="@+id/settings_button_settings"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/settings_text" />

        <Button
            android:id="@+id/settings_button_support"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="86dp"
            android:text="@string/support_text" />

        <Button
            android:id="@+id/settings_button_copyright"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="155dp"
            android:text="@string/copyright_text" />

        <Button
            android:id="@+id/settings_button_feedback"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/feedback_zur_app_text" />

        <Button
            android:id="@+id/testButton"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="57dp"
            android:layout_marginEnd="34dp"
            android:text="test" />

    </RelativeLayout>
</RelativeLayout>