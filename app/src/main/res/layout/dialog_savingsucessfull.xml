<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:orientation="vertical"
    tools:context=".TabActivity">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/savingSuccessful_textView"
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:padding="5dp"
            android:paddingTop="5dp"
            android:text="@string/event_saving_successful"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />
    </TableRow>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp">

        <TableRow
            android:layout_width="277dp"
            android:layout_height="102dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:padding="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="5dp"
            android:visibility="visible">

            <Button
                android:id="@+id/savingSuccessful_button_new"
                android:layout_width="129dp"
                android:layout_height="wrap_content"

                android:layout_margin="8dp"
                android:background="@color/zentea_darkgreen"
                android:padding="2dp"
                android:text="@string/savingSuccessful_new"
                android:textColor="@color/zxing_status_text"
                android:visibility="visible" />

            <Button
                android:id="@+id/savingSuccessful_button_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_margin="8dp"
                android:background="@color/zentea_darkgreen"
                android:padding="2dp"
                android:text="@string/savingSuccessful_qrcode"
                android:textColor="@color/zxing_status_text"
                android:visibility="visible" />


        </TableRow>

    </RelativeLayout>
</RelativeLayout>